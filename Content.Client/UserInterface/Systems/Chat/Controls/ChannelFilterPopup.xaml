<controls:ChannelFilterPopup
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Systems.Chat.Controls">
    <PanelContainer Name="FilterPopupPanel" StyleClasses="BorderedWindowPanel">
        <BoxContainer Orientation="Horizontal">
            <Control MinSize="4 0"/>
            <BoxContainer Name="FilterVBox" MinWidth="210" Margin="0 10" Orientation="Vertical" SeparationOverride="4">
                <LineEdit Name="HighlightEdit" PlaceHolder="{Loc 'hud-chatbox-highlights-placeholder'}" ToolTip="{Loc 'hud-chatbox-highlights-tooltip'}"/>
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</controls:ChannelFilterPopup>
