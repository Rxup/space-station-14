<Control xmlns="https://spacestation14.io" MinWidth="300" VerticalExpand="True">
    <PanelContainer StyleClasses="AngleRect" VerticalExpand="True" />
    <BoxContainer Margin="4" Orientation="Vertical" VerticalExpand="True">
        <Label Name="VoteTitle" />
        <Label Name="VoteCaller" />
        <RichTextLabel Name="Rules" VerticalAlignment="Center" />

        <BoxContainer Orientation="Horizontal">
            <ProgressBar Margin="4" HorizontalExpand="True" Name="TimeLeftBar" MinValue="0" MaxValue="1" />
            <Label Name="TimeLeftText" />
        </BoxContainer>
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True" SizeFlagsStretchRatio="6" MinHeight="200">
            <BoxContainer Name="SourcesList" Orientation="Vertical"
                          HorizontalExpand="True"
                          VerticalExpand="True" />
        </ScrollContainer>
    </BoxContainer>
</Control>
